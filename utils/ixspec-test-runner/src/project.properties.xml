<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://thecodeyard.org/ns/xml/schemas/regina/shared_properties.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron" ?>
<properties>
	
	<debug value="false" />


	<!-- Invisible XML settings -->
	<ixml>
		<grammar>
			<dtd>
				<declaration location="${project.liana}/grammars/xml_document_type_declaration.ixml" />				
			</dtd>
		</grammar>
	</ixml>
	    
	
	<!-- XProc settings -->
	<xproc>
		<processor>
			<morgana>
				<config>
					<default location="${project.liana}/utils/ixspec-test-runner/src/xproc/config.xml" />
				</config>
			</morgana>
		</processor>
		<pipeline>
			<ixspec-test-runner location="${project.liana}/utils/ixspec-test-runner/src/xproc/ixspec_test_runner.xpl" />
		</pipeline>
	</xproc>


	<!-- XML Entity and URI resolution -->
	<resource-resolution>
		<catalog>
			<default location="${project.liana}/catalog.xml" />
		</catalog>
	</resource-resolution>
	
	
	<!-- Default directory paths -->
	<base location="${basedir}">                   
		<tmp location="${base}/tmp" />
		<debug location="${base}/debug" />
		<logs location="${base}/logs" />
		<reports location="${base}/reports">
			<html location="${base.reports}/html" />
			<xml location="${base.reports}/xml" />
		</reports>
	</base>
		
	
	<!-- List of dependencies to check -->
	<dependencies>
		<dependency.01 name="ANT Contrib" property="${ant.lib.contrib}" type="file" />
		<dependency.02 name="Morgana XProc III" property="${xproc.processor.morgana}" type="file" />
		<dependency.03 name="Morgana XProc III config for iXSpec Test Runner" property="${xproc.processor.morgana.config.default}" type="file" />
		<dependency.04 name="Saxon" property="${xslt.processor.saxon}" type="file" />
		<dependency.05 name="XML Resolver" property="${resource-resolution.resolver.xml-commons}" type="file" />
		<dependency.06 name="Default XML Catalog" property="${resource-resolution.catalog.default}" type="file" />
		<dependency.07 name="NineML CoffeeFilter" property="${ixml.processor.nine-ml.coffeefilter}" type="file" />
		<dependency.08 name="NineML CoffeeGrinder" property="${ixml.processor.nine-ml.coffeegrinder}" type="file" />
		<!-- dependency.09 name="NineML CoffeePot" property="${ixml.processor.nine-ml.coffeepot}" type="file" / -->
		<!-- dependency.10 name="NineML CoffeeSacks" property="${ixml.processor.nine-ml.coffeesacks}" type="file" / -->
	</dependencies>
	
	
</properties>